	<div class="col-sm-7 col-md-8 col-lg-9">
		<div class="card">
			<div class="card-header d-flex py-2 px-2">
				<h6 class="m-0 mr-auto d-flex flex-column justify-content-center"><%= page_heading %></h3>
				<a href="#" class=" ml-auto btn btn-sm btn-success">Add category</a>	
			</div>
			<div class="card-body p-0">
				<div class="table-responsive-md">
					<table class="table table-striped table-sm mb-0">
						<thead>
							<tr class="d-flex">
								<th class="col-1 pl-2">#</th>
								<th class="col-4 col-lg-5">Category name</th>
								<th class="col-2">Created</th>
								<th class="col-2">Updated</th>
								<th class="col-3 col-lg-2 pr-2 text-right">Actions</th>
							</tr>
						</thead>
						<tbody>
						<% if (categories) { %>
							<% categories.forEach(function(category, index) { %>
							<tr data-id="<%= category._id %>" class="d-flex">
								<td class="col-1 pl-2"><%= index + 1 %></td>
								<td class="col-4 col-lg-5"><%= category.cat_name %></td>
								<td class="col-2"><%= category.created_at.toDateString(); %></td>
								<td class="col-2"><%= category.updated_at.toDateString(); %></td>
								<td class="col-3 col-lg-2 text-right pr-2">
									<div class="btn-group">
										<a href="../dashboard/post/edit/<%= category._id %>" class="btn btn-sm btn-success">Edit</a>
										<a href="#" class="btn btn-sm btn-danger delete-post" data-id="<%= category._id %>">Delete</a>
									</div>
								</td>
							</tr>
							<% }); %>
							<% } else { %> 
							<tr>
								<td colspan="5">There are no categories</td> 
							</tr>		
							<% } %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>