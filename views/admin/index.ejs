	<div class="col-sm-7 col-md-8 col-lg-9">
		<div class="card">
			<div class="card-header d-flex py-2 px-1">
				<h6 class="m-0 mr-auto d-flex flex-column justify-content-center">Posts</h3>
				<a href="addpost" class=" ml-auto btn btn-sm btn-success">Add post</a>	
			</div>
			<div class="card-body p-0">
				<div class="table-responsive-md">
					<table class="table table-striped table-sm mb-0">
						<thead>
							<tr class="d-flex">
								<th class="col-1">#</th>
								<th class="col-4 col-lg-5">Title</th>
								<th class="col-2">Created</th>
								<th class="col-2">Updated</th>
								<th class="col-3 col-lg-2 text-right">Actions</th>
							</tr>
						</thead>
						<tbody>
						<% if (posts) { %>
							<% posts.forEach(function(post) { %>
							<tr data-id="<%= post._id %>" class="d-flex">
								<td class="col-1"></td>
								<td class="col-4 col-lg-5"><%= post.title %></td>
								<td class="col-2"></td>
								<td class="col-2"></td>
								<td class="col-3 col-lg-2 text-right">
									<div class="btn-group">
										<a href="#" class="btn btn-sm btn-success">Edit</a>
										<a href="#" class="btn btn-sm btn-danger delete-post" data-id="<%= post._id %>">Delete</a>
									</div>
								</td>
							</tr>
							<% }); %>
							<% } else { %> 
							<tr>
								<td colspan="5">There are no posts</td> 
							</tr>		
							<% } %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>