	<div class="col-sm-7 col-md-8 col-lg-9">
		<div class="card">
			<div class="card-header d-flex py-2 px-2">
				<h6 class="m-0 mr-auto d-flex flex-column justify-content-center">Posts</h3>
				<a href="../dashboard/addpost" class=" ml-auto btn btn-sm btn-success">Add post</a>	
			</div>
			<div class="card-body p-0">
				<div class="table-responsive-md">
					<table class="table table-striped table-sm mb-0">
						<thead>
							<tr class="d-flex">
								<th class="col-1 pl-2">#</th>
								<th class="col-3">Title</th>
								<th class="col-2">Category</th>
								<th class="col-2">Created</th>
								<th class="col-2">Updated</th>
								<th class="col-2 pr-2 text-right">Actions</th>
							</tr>
						</thead>
						<tbody>
						<% if (posts) { %>
							<% posts.forEach(function(post, index) { %>
							<tr data-id="<%= post._id %>" class="d-flex">
								<td class="col-1 pl-2"><%= index + 1 %></td>
								<td class="col-3">
									<a href="/<%= post._id %>" class="text-dark"><%= post.title %></a>
								</td>
								<td class="col-2"><%= post.category != null ? post.category.cat_name : 'No category assigned' %></td>
								<td class="col-2"><%= post.created_at.toDateString(); %></td>
								<td class="col-2"><%= post.updated_at.toDateString(); %></td>
								<td class="col-2 text-right pr-2">
									<div class="btn-group">
										<a href="../dashboard/post/edit/<%= post._id %>" class="btn btn-sm btn-success">Edit</a>
										<a href="#" class="btn btn-sm btn-danger delete-post" data-id="<%= post._id %>">Delete</a>
									</div>
								</td>
							</tr>
							<% }); %>
							<% } else { %> 
							<tr>
								<td colspan="6">There are no posts</td> 
							</tr>		
							<% } %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>